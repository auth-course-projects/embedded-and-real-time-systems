<div class="row">

  <div class="col-md-3">
		<div class="panel panel-danger" style="background-color:blue">
			<div class="panel-heading" style="background-color:blue">
				<div class="row">
					<div class="col-xs-4">
						<i class="fa fa-long-arrow-left fa-5x"></i>
					</div>
					<div class="col-xs-8 text-right">
						<p class="announcement-heading">{{received}}</p>
						<p class="announcement-text">Messages Received</p>
					</div>
				</div>
			</div>
		</div>
	</div>

  <div class="col-md-3">
		<div class="panel panel-danger">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-4">
						<i class="fa fa-long-arrow-right fa-5x"></i>
					</div>
					<div class="col-xs-8 text-right">
						<p class="announcement-heading">{{transmitted}}</p>
						<p class="announcement-text">Messages Transmitted</p>
					</div>
				</div>
			</div>
		</div>
	</div>

  <div class="col-md-3">
		<div class="panel panel-success">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-4">
						<i class="fa fa-asterisk fa-5x"></i>
					</div>
					<div class="col-xs-8 text-right">
						<p class="announcement-heading">{{produced}}</p>
						<p class="announcement-text">Messages Produced</p>
					</div>
				</div>
			</div>
		</div>
	</div>

  <div class="col-md-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-4">
						<i class="fa fa-info fa-5x"></i>
					</div>
					<div class="col-xs-8 text-right">
						<p class="announcement-heading">{{producedDelayAvg}}</p>
						<p class="announcement-text">Average Delay (mins)</p>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
